<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dissertation.referencearchitecture</groupId>
  <artifactId>referencearchitecture</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <extensions>
      <extension>
        <groupId>kr.motd.maven</groupId>
        <artifactId>os-maven-plugin</artifactId>
        <version>1.6.1</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>org.xolstice.maven.plugins</groupId>
        <artifactId>protobuf-maven-plugin</artifactId>
        <version>0.6.1</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>compile-custom</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <protocArtifact>com.google.protobuf:protoc:3.21.12:exe:${os.detected.classifier}</protocArtifact>
          <pluginId>grpc-java</pluginId>
          <pluginArtifact>io.grpc:protoc-gen-grpc-java:1.54.0:exe:${os.detected.classifier}</pluginArtifact>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.plugin.version}</version>
        <executions>
          <execution>
            <id>read-node</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>readNode</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.referencearchitecture.compute.ReadNode</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>write-node</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>writeNode</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.referencearchitecture.compute.WriteNode</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>busy-read-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>busyReadGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.singleClient.BusyReadGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>constant-write-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>constantWriteGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.singleClient.ConstantWriteGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>client-interface</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>clientInterface</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.singleClient.ClientInterface</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>constant-read-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>constantReadGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.singleClient.ConstantReadGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>busy-write-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>busyWriteGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.singleClient.BusyWriteGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>multi-constant-write-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>multiConstantWriteGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.multiClient.ConstantWriteGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>multi-busy-read-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>multiBusyReadGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.multiClient.BusyReadGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>multi-busy-write-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>multiBusyWriteGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.multiClient.BusyWriteGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>multi-constant-read-generator</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>multiConstantReadGenerator</finalName>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.dissertation.evaluation.multiClient.ConstantReadGenerator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer />
          </transformers>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>module-info.class</exclude>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.MF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>META-INF/**</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>software.amazon.awssdk</groupId>
        <artifactId>bom</artifactId>
        <version>${aws.java.sdk.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <javax.annotation.version>1.3.2</javax.annotation.version>
    <maven.shade.plugin.version>3.4.1</maven.shade.plugin.version>
    <slf4j.version>2.0.7</slf4j.version>
    <maven.compiler.plugin.version>3.6.1</maven.compiler.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <grpc.version>1.54.0</grpc.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.jar.plugin.version>3.3.0</maven.jar.plugin.version>
    <aws.lambda.java.version>1.2.0</aws.lambda.java.version>
    <json.version>20230227</json.version>
    <commons-net.version>3.9.0</commons-net.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <aws.java.sdk.version>2.20.27</aws.java.sdk.version>
    <exec-maven-plugin.version>1.6.0</exec-maven-plugin.version>
  </properties>
</project>
